@model SMC_UI.Models.Account.AddRoleModel

@{
    ViewData["Title"] = "Add Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="border container backgroundWhite" style="padding:60px;">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Add an Role</h1>
        </div>
        <form asp-action="Create" class="user">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input asp-for="Role" class="form-control" placeholder="Role">
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <hr>
            <button type="submit" class="btn btn-success btn-user btn-block">
                <i class="fas fa-arrow-circle-down"></i> Save
            </button>
            <button asp-action="Index" class="btn btn-info btn-user btn-block">
                <i class="fas fa-arrow-left"></i> Back to List
            </button>
        </form>
    </div>
</div>