@model IEnumerable<SMC_API.Dtos.Quote.QuoteReadDto>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Welcome To Lafto Mikael Church</h1>
</div>
<div class="columns">
    <div class="row">

        <!-- Earnings (Annual) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Student
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Current ClassRoom
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div id="carouselExampleSlidesOnly" class="carousel slide offset-md-4" data-ride="carousel">
        <div class="carousel-inner">
            @{
                var i = 0;
                foreach (var item in Model.Where(s => s.isActive == true))
                {
                    var itemClass = i++ == 0 ? "item active" : "item";
                    <div class="carousel-item @itemClass text-lg-start font-weight-bold text-primary">
                        <div class="card" style="width:400px">

                            <div class="card-body">
                                <p class="card-text" >@item.Description</p>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>


</div>
