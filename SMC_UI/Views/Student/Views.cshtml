@model SMC_UI.Models.Student.StudentViewDto

@{
    ViewData["Title"] = "View Student Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="offset-12">
    <div class="row">
        <div class="col-8">
            <a asp-action="Index" class="btn btn-info btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-arrow-left"></i>
                </span>
                <span class="text">Back to Students</span>
            </a>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">

    <div class="col-xl-5 col-lg-5">

        <!-- Area Chart -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Student Info</h6>
            </div>
            <div class="card-body">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Full Name</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">
                                @{
                                    var fullName = Model.StudentRead.FirstName + " " + Model.StudentRead.MiddleName + " " + Model.StudentRead.LastName;
                                }
                                @fullName
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Mother Name</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.StudentRead.MotherName</p>
                        </div>
                    </div>
                    <hr>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Christening Name</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.StudentRead.ChristeningName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Phone</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.StudentRead.Telephone</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Age</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.StudentRead.Age</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Address</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.StudentRead.Adress</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bar Chart -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Attendance Record </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered dataTable" id="" width="100%" cellspacing="0">
                        <thead>
                            <tr class="table-secondary">
                                <th>
                                    Course Name
                                </th>
                                <th>
                                    Date
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.AttendancesRead)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Course.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <!-- Donut Chart -->
    <div class="col-xl-7 col-lg-7">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Course Results</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">

                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered dataTable" id="" width="100%" cellspacing="0">
                                <thead>
                                    <tr class="table-secondary">
                                        <th>
                                            CourseName
                                        </th>
                                        <th>
                                            Total Score
                                        </th>
                                        @*                                        <th></th>
                                        *@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ResultsRead)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CourseName)
                                            </td>                                            
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalScore)
                                            </td>
                                            @* <td>
                                        <a asp-action="Edit" asp-route-Id="@item.StudentId" class="btn btn-success  btn-icon-split">
                                        <span class="icon text-white-50">
                                        <i class="fas fa-info"></i>
                                        </span>
                                        <span class="text">View</span>
                                        </a>
                                        </td>*@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script>
        $(function () {
            $(document).ready(function () {
                $('.dataTable').DataTable();
            });
        });
    </script>
    }

