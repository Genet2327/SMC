@model SMC_UI.Models.Course.CourseUpdateDto

@{
    ViewBag.Title = "Edit Course ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border container backgroundWhite" style="padding:60px;">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Update an Course</h1>
        </div>
        <form asp-action="Edit" class="user">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group row">
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="form-group row">
                <input asp-for="Description" class="form-control" placeholder="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div> 
            <hr>
            <button type="submit" class="btn btn-success btn-user btn-block">
                <i class="fas fa-arrow-circle-down"></i> Save
            </button>
            <button asp-action="Index" class="btn btn-info btn-user btn-block">
                <i class="fas fa-arrow-left"></i> Back to List
            </button>
        </form>
    </div>
</div>